---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import formatUrl from "@/utils/formatUrl";
import type { Project } from "@/data/projects";
import projects from "@/data/projects";

type Props = Project;
const { title, techs, link, image, important } = Astro.props;
---

<Layout title="Template - All Posts">
  <main class="flex flex-col gap-10">
    <h1 class="text-2xl text-neutral-100">Project Archive ({projects.length})</h1>
    
    <article class="flex flex-col">
      {
        projects.sort((b,a) => parseInt(a.year) - parseInt(b.year)).map((project) => (
          <a
            class="group flex flex-col bg-emerald-400 bg-opacity-0 gap-2 border-t border-neutral-700 py-4 duration-300 transition-all hover:bg-opacity-10"
            href={project.link}
          >
            <div class="flex w-full items-center justify-between">
              <h2 class="text-lg pl-5 transition-color duration-300 group-hover:text-emerald-400">{project.title}</h2>
              <div class="pr-5 flex flex-row items-center gap-4">
                <p>{project.year}</p>
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 18 18"
                  fill="none"
                  class="transition-all duration-300 group-hover:translate-x-1"
                >
                  <path
                    d="M5.25 12.75L12.75 5.25"
                    stroke="#999999"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <path
                    d="M5.25 5.25H12.75V12.75"
                    stroke="#999999"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </div>
            </div>
            <div class="pl-5 flex flex-wrap gap-2">
            {project.techs.map((tech) => (
              <div class="px-2 bg-emerald-400 opacity-50 duration-300 rounded-lg inline-flex items-center border border-emerald-400 transition-all group-hover:opacity-100 group-hover:bg-black">
                <p class="text-[12px] text-black duration-300 transition-all  group-hover:text-white">{tech}</p>
            </div>
            ))}
            </div>
            <p class="text-[12px] pl-5">{formatUrl(project.link)}</p>
          </a>
        ))
      }
    </article>
  </main>
</Layout>
