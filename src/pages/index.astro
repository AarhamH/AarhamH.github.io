---
import { getCollection } from "astro:content";

import Layout from "@/layouts/Layout.astro";
import SocialLinks from "@/components/SocialLinks.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import Link from "@/components/shared/Link.astro";
import convertAsteriskToStrongTag from "@/utils/convertAsteriskToStrongTag";
import Resume from "../content/resume/Aarham-Haider-Resume.pdf"

import presentation from "@/data/presentation";
import education from "@/data/education";
import projects from "@/data/projects";
import {languages} from'@/data/technologies';
import {technologies} from'@/data/technologies';
import {frameworks} from '@/data/technologies';

import TechnologyCard from "@/components/TechnologyCard.astro";

---

<Layout>
  <main class="flex flex-col gap-20">
    <article class="flex flex-col gap-8">
      <h1 class="text-3xl text-neutral-100">{presentation.title}</h1>
      <h2
        class="max-w-[100ch] leading-6"
        set:html={convertAsteriskToStrongTag(presentation.description)}
      />
    </article>

    <article class="flex flex-col pb-20">
      
      <header class="flex w-full flex-row justify-between gap-3 items-center pb-4">
        <h3 class="text-lg text-rose-400">Experience</h3>
        <div class="flex-grow mx-3">
          <hr class="h-px min-w-1 max-w-3 opacity-40 bg-rose-200 border-0">        
        </div>
      </header>
      <div>
 <p class="pb-6 pt-3 decoration-4 text-neutral-200  text-lg">Junior Application Developer | Modrinth</p>
      <div class="pl-4">
            <div class="flex">
              <p class="text-rose-400 pb-1 italic">⮞ </p>
              <p class="ml-2 text">Built and deployed cross-platform desktop applications to gamers and hobbyists who are passionate about in-game mods. Demonstrated leadership during our migration from Electron.js to Tauri through mentorship and team engagement.</p> 
      </div>
      <p class="pl-4 text-rose-400 mt-4">Rust | Vue.js | TypeScript | Git | Selenium| Docker </p> 

      </div>
      <p class="pb-6 pt-8 decoration-4 text-neutral-200  text-lg">Teaching Assistant | SFU</p>
      <div class="pl-4">
            <div class="flex">
              <p class="text-rose-400 pb-1 italic">⮞ </p>
              <p class="ml-2 text"> Regularly explained computer science concepts and assisted with assignments for first-year students, ranging from fundamental data structures such as arrays, trees, and linked-lists, all the way to principles in Object-Oriented Design in C++.</p>  
      </div>
      <p class="pl-4 text-rose-400 mt-4">C++ | Linux | DS & A | OOP  </p> 
    <article class="flex flex-col">
      
      <header class="mt-20 flex w-full flex-row justify-between gap-3 items-center pb-4">
        <h3 class="text-lg text-rose-400">Education</h3>
        <div class="flex-grow mx-3">
          <hr class="h-px min-w-1 max-w-3 opacity-40 bg-rose-200 border-0">        
        </div>
      </header>
      <p class="pb-6 pt-3 decoration-4 text-neutral-200 text-md">~     {presentation.education}     ~</p>
      <div class="pl-4">
        {
          education.map((educations)=>(
            <div>
              <p class="text-rose-400 pb-1 italic">⮞ {educations.course}</p>
              <p class="text-[12px] pl-4 pb-4">⮩  {educations.content}</p>
            </div>
          ))
        }
      </div>

    </article>

    <article class="flex flex-col">
      
      <header class="mt-20 flex w-full flex-row justify-between gap-3 items-center pb-4">
        <h3 class="text-lg text-rose-400">Competencies</h3>
        <div class="flex-grow mx-3">
          <hr class="h-px min-w-1 max-w-3 opacity-40 bg-rose-200 border-0">        
        </div>
      </header>
      

      <h3 class="bottom-0 left-0 w-full flex justify-center items-center p-3">
        Languages
      </h3>
      <div class="flex justify-center pb-10">

        <section class="grid grid-cols-3 gap-5 sm:grid-cols-7">
          {
            languages.length !== 0 &&
              languages.map((language) => <TechnologyCard {...language} />)
          }
        </section>
      </div>

      <h3 class="bottom-0 left-0 w-full flex justify-center items-center p-3">
        Frameworks
      </h3>
      <div class="flex justify-center pb-10">
        <section class="grid grid-cols-3 gap-5 sm:grid-cols-5">
          {
            frameworks.length !== 0 &&
            frameworks.map((framework) => <TechnologyCard {...framework} />)
          }
        </section>
      </div>
      <h3 class="bottom-0 left-0 w-full flex justify-center items-center p-3">
        Tools
      </h3>
      <div class="flex justify-center">
        <section class="grid grid-cols-3 gap-5 sm:grid-cols-6">
          {
            technologies.length !== 0 &&
            technologies.map((technology) => <TechnologyCard {...technology} />)
          }
        </section>
      </div>

    </article>

    <article class="flex flex-col gap-8">
      <header class="mt-20 flex w-full flex-row justify-between gap-3 items-center pb-4">
        <h3 class="text-lg text-rose-400">Selected Projects</h3>
        <div class="flex-grow mx-3">
          <hr class="h-px min-w-1 max-w-3 opacity-40 bg-rose-200 border-0">        
        </div>
      </header>
      {projects.length === 0 && <p>Oops, I must work^^^^^</p>}

      <section class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        {
          projects.length !== 0 &&
            projects.map((project) => <ProjectCard {...project} />)
        }
      </section>
    </article>

    <article class="flex flex-col gap-8">
      <header class="mt-20 flex w-full flex-row justify-between gap-3 items-center">
        <h3 class="text-lg text-rose-400">Contact Me</h3>
        <div class="flex-grow mx-3">
          <hr class="h-px min-w-1 max-w-3 opacity-40 bg-rose-200 border-0">        
        </div>
      </header>

      <SocialLinks />
    </article>
  </main>
</Layout>
