---
import type { TailwindColor } from "@/utils/types/tailwind";
import { MAP_COLOR_VARIANT_TO_BG } from "@/utils/mapVariants";

type Props = {
  position: "bottom" | "top";
  color: TailwindColor;
};

const { position, color } = Astro.props;
---

<div
  class:list={{
    [`fixed z-0 h-[4px] w-[4px] lg:w-[4px] lg:h-[4px]`]: true,
  }}
>
</div>
